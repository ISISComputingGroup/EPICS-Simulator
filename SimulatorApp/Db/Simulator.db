##BOOLEAN STUFF

record(bi, "$(P)BOOL:SIMVALUE")
{
   field(DTYP, "asynInt32")
   field(INP,  "@asyn(booleansimulator,0,0)BOOLEAN_VALUE")
   field(SCAN, "I/O Intr")
   field(ZNAM, "FALSE")
   field(ONAM, "TRUE")
   field(FLNK, "$(P)BOOL:VALUE")
}

record(ao, "$(P)BOOL:UPDATERATE")
{
   field(DTYP, "asynInt32")
   field(OUT,  "@asyn(booleansimulator,0,0)BOOLEAN_UPDATEPERIOD")
}

record(ao, "$(P)BOOL:UPDATERATENOISE")
{
   field(DTYP, "asynInt32")
   field(OUT,  "@asyn(booleansimulator,0,0)BOOLEAN_UPDATEPERIODNOISE")
}

record(bi,"$(P)BOOL:SET_SIM") {
    field(VAL, 1)
    field(ZNAM, "Sim mode off")
    field(ONAM, "Sim mode on")
    field(FLNK, "$(P)BOOL:VALUE")
}

record(bi, "$(P)BOOL:VALUE")
{
    field(SIOL, "$(P)BOOL:SIMVALUE PP")
    field(SIML,"$(P)BOOL:SET_SIM")
    field(ZNAM, "FALSE")
    field(ONAM, "TRUE")
}

